<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
    	  <%= render 'shared/feed' %>
    </div>
    
    <head>
   		<link rel="stylesheet" type="text/css" href="cssrefresh.js" />
   		<script type="text/javascript" src="cssrefresh.js"></script>
	</head>
    
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>
    	Witamy w naszej prostej aplikacji...
    </h1>

    <h2>
    	...która została napisana na potrzeby ćwiczeń!
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>


<% end %>
